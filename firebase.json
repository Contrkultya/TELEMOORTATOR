{
  "database": {
    "rules": "database-rules.json"
  },
  "firestore": {
    "rules": "firestore-rules.json",
    "indexes": "firestore-indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "storage": {
    "rules": "storage-rules.json"
  }
}
